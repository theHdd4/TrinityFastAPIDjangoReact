# Shared Redis configuration for local development
# Values here are consumed by all Trinity services (FastAPI, Django, AI worker).
REDIS_URL=
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_CLIENT_NAME=trinity-dev
REDIS_USE_TLS=false
REDIS_TLS_CA_FILE=
REDIS_TLS_CERT_FILE=
REDIS_TLS_KEY_FILE=
REDIS_TLS_CERT_REQS=required
REDIS_POOL_MAX_CONNECTIONS=25
REDIS_POOL_TIMEOUT=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=15

# Shared Celery configuration for asynchronous workers
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_DEFAULT_QUEUE=trinity.tasks
CELERY_BEAT_QUEUE=trinity.tasks.beat
CELERY_WORKER_CONCURRENCY=2

ENVIRONMENT=development
