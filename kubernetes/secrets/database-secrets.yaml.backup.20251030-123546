  name: trinity-staging-secrets
  namespace: trinity-staging
type: Opaque
data:
  # Base64 encoded secrets - Replace with your actual base64 encoded values
  postgres-password: dHJpbml0eV9wYXNz  # trinity_pass
  mongo-password: cm9vdHBhc3M=         # rootpass
  mongo-user-password: dHJpbml0eV9wYXNz # trinity_pass
---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: trinity-staging
type: Opaque
data:
  # Django Secret Key - Replace with your actual secret key
  django-secret-key: eW91cl9zZWNyZXRfa2V5X2hlcmU=  # your_secret_key_here
  
  # MinIO Secrets - Replace with your actual MinIO credentials
  minio-access-key: bWluaW8=           # minio
  minio-secret-key: bWluaW8xMjM=       # minio123 (base64 encoded)
  
  # Redis password (if needed)
  redis-password: ""                   # empty if no password
---
