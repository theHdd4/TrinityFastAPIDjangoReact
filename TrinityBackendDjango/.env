DEBUG=true
POSTGRES_DB=trinity_db
POSTGRES_USER=trinity_user
POSTGRES_PASSWORD=trinity_pass
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
# IP address where the frontend and backend will be reachable.
HOST_IP=${HOST_IP}
# MongoDB connection string
MONGO_URI=mongodb://mongo:27017/trinity

# Frontend URL used for CORS
# Address of the React frontend
FRONTEND_URL=
ALLOWED_HOSTS=*
CSRF_TRUSTED_ORIGINS=http://${HOST_IP}:8080,https://trinity.quantmatrixai.com
# Comma separated list of origins for CORS. If left blank the defaults from
# config/settings.py is used (trinity.quantmatrixai.com and the local frontend URL).
CORS_ALLOWED_ORIGINS=http://${HOST_IP}:8080,https://trinity.quantmatrixai.com
# Comma separated allowed origins for the FastAPI service
FASTAPI_CORS_ORIGINS=http://${HOST_IP}:8080,https://trinity.quantmatrixai.com
# Extra comma separated domain names or IP addresses that should map to the
# default tenant. Include the public hostname when exposing the app via
# Cloudflare Tunnel so tenant lookup succeeds.
ADDITIONAL_DOMAINS=trinity.quantmatrixai.com,${HOST_IP},localhost
FLIGHT_HOST=flight
FLIGHT_PORT=8815
